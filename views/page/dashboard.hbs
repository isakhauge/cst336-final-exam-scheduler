<section class="py-5 bg-primary">
	<div class="container">
		<h1 class="text-white text-center">
			CST 336 - Final Exam, Scheduler
		</h1>
		<h2 class="text-white text-center font-weight-light h5">
			Developed by Isak Hauge
		</h2>
	</div>
</section>

<section class="py-5 bg-light border-bottom">
	<div class="container text-center">
		<a href="/book" class="btn btn-primary btn-block">Book time</a>
	</div>
</section>

<section class="py-5">
	<div class="container">
		<div class="table-responsive shadow-lg border rounded">
			<table class="table table-striped table-hover">
				<thead>
				<tr>
					<th>Date</th>
					<th>Start time</th>
					<th>Duration</th>
					<th>Booked by</th>
					<th>
						<button class="btn btn-success btn-block" data-toggle="modal" data-target="#add-time">Add time</button>
					</th>
				</tr>
				</thead>
				<tbody>
				<tr>
					<td colspan="5" class="text-center">Loading ...</td>
				</tr>
				</tbody>
			</table>
		</div>
	</div>
</section>




<!-- Add time -->
<div class="modal fade" id="add-time" tabindex="-1" role="dialog">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Add time slot</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			</div>
			<div class="modal-body">
				<!-- Date -->
				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text">Date</span>
					</div>
					<input id="add-time-date" type="date" class="form-control">
				</div>

				<!-- Start time -->
				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text">Start time</span>
					</div>
					<input id="add-time-start" type="time" class="form-control">
				</div>

				<!-- End time -->
				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text">End time</span>
					</div>
					<input id="add-time-end" type="time" class="form-control">
				</div>

			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
				<button id="button-add-time" type="button" class="btn btn-primary">Add time</button>
			</div>
		</div>
	</div>
</div>




<!-- Details -->
<div class="modal fade" id="details" tabindex="-1" role="dialog">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Details</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			</div>
			<div class="modal-body">
				<!-- Date -->
				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text">Date</span>
					</div>
					<input id="details-date" type="date" class="form-control" disabled>
				</div>

				<!-- Start time -->
				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text">Start time</span>
					</div>
					<input id="details-start" type="time" class="form-control" disabled>
				</div>

				<!-- End time -->
				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text">End time</span>
					</div>
					<input id="details-end" type="time" class="form-control" disabled>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
			</div>
		</div>
	</div>
</div>




<!-- Delete -->
<div class="modal fade" id="delete" tabindex="-1" role="dialog">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Delete</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			</div>
			<div class="modal-body">
				<!-- Date -->
				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text">Date</span>
					</div>
					<input id="delete-date" type="date" class="form-control" disabled>
				</div>

				<!-- Start time -->
				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text">Start time</span>
					</div>
					<input id="delete-start" type="time" class="form-control" disabled>
				</div>

				<!-- End time -->
				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text">End time</span>
					</div>
					<input id="delete-end" type="time" class="form-control" disabled>
				</div>

				<hr>

				<p>Are you sure you want to delete this entry?</p>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
				<button id="button-delete" type="button" class="btn btn-danger">Yes, delete!</button>
			</div>
		</div>
	</div>
</div>

<script type="module" src="/js/page/dashboard.js"></script>