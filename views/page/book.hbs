<!-- Book -->
<div class="modal fade" id="book" tabindex="-1" role="dialog">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Booking complete!</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			</div>
			<div class="modal-body">
				<!-- Name -->
				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text">Name</span>
					</div>
					<input id="book-name" type="text" class="form-control" disabled>
				</div>

				<!-- Date -->
				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text">Date</span>
					</div>
					<input id="book-date" type="date" class="form-control" disabled>
				</div>

				<!-- Start time -->
				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text">Start time</span>
					</div>
					<input id="book-start-time" type="time" class="form-control" disabled>
				</div>

				<!-- End time -->
				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text">End time</span>
					</div>
					<input id="book-end-time" type="time" class="form-control" disabled>
				</div>

				<hr>

				<p>Your booking is complete!</p>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-primary" data-dismiss="modal">Ok</button>
			</div>
		</div>
	</div>
</div>

<script type="module" src="/js/page/book.js"></script>